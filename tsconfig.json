{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
		],
		"paths": {
			"@env/*": ["environments/*"],
			"@core/*": ["app/core/*"],
			"@shell/*": ["app/shell/*"],
			"@shared/*": ["app/shared/*"],
			"@modules/*": ["app/modules/*"],
			"@services/*": ["app/services/*"],
			"@wydatex/*": ["app/wydatex-package/*"] // temp until automatic package is created
		}
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
